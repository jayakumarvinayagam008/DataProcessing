@model DataProcessing.Core.Web.Models.NumberLookUpDownload
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>NumberLookup</h4>
<hr />

<form asp-action="Index" id="frmNumberLookUp" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-7">
            <div class="card-box">
                <p class="text-muted font-14 m-b-25">
                    Scrub Upto 1000000 Mobile Numbers at a time & Enjoy super fast DND Check Online.
                </p>
                <div class="row">
                    <div class="col-12">
                        <textarea class="form-control" rows="15" placeholder="To scrub, you can enter multiple numbers by one number per line or one number by comma. For example 8555300000, 8543345675, 8543954564 &#13; OR &#13;&#10;8555300000 &#13;&#10;8543345675 &#13;&#10;8543954564">
                        </textarea>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Upload excel file via below upload option(only Xlx and CSV files)</label>
                        <input type="file" class="filestyle" data-placeholder="Excel/CSV" id="files" name="files" tabindex="-1" style="position: absolute; clip: rect(0px, 0px, 0px, 0px);">
                        <div class="bootstrap-filestyle input-group">
                            <input type="text" class="form-control " placeholder="Excel/CSV" disabled="">
                            <span class="group-span-filestyle input-group-btn" tabindex="0">
                                <label for="files" class="btn btn-default ">
                                    <span class="icon-span-filestyle glyphicon glyphicon-folder-open"></span>
                                    <span class="buttonText">Choose file</span>
                                </label>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="card-box">
                <div class="checkbox checkbox-purple">
                    <div>Download Type (Select one or both options)</div>
                    <div class="checkbox checkbox-purple">
                        <input id="checkbox6a" type="checkbox" data-parsley-multiple="checkbox6a">
                        <label for="checkbox6a">
                            Airtel
                        </label>
                        <input id="checkbox6b" type="checkbox" data-parsley-multiple="checkbox6a">
                        <label for="checkbox6b">
                            BSNL
                        </label>
                        <input id="checkbox6c" type="checkbox" data-parsley-multiple="checkbox6a">
                        <label for="checkbox6c">
                            Vodofone
                        </label>
                    </div>
                </div>
                <div class="form-group m-b-0" style="margin-top:50px;">
                    <button type="button" class="btn btn-default waves-effect waves-light">
                        <span class="btn-label">
                            <i class="fa fa-download"></i>
                        </span>DownLoad Result
                    </button>
                </div>
            </div>
        </div>

        <div class="uploadSummary">
            @{
                if (Model.Status)
                {
                    <input type="hidden" id="hndLookupId" value="@Model.FileName" />
                    <button class="btn btn-link" type="button" id="btnNumberLookUp">
                        Download Number Lookup Response
                    </button>
                }
            }
        </div>
    </div>
</form>

<script src="~/assets/js/jquery.min.js"></script>
<script src="~/js/NumberLookup.js"></script>