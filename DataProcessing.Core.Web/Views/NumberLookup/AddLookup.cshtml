@model DataProcessing.Core.Web.Models.NumberLookup

@{
    ViewData["Title"] = "AddLookup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/assets/plugins/magnific-popup/magnific-popup.css" rel="stylesheet" />
<link href="~/assets/plugins/jquery-datatables-editable/dataTables.bootstrap4.min.css" rel="stylesheet" />
<div class="row">

    <div class="col-lg-6">
        <div class="card-box">
            <form asp-action="SaveLookup" id="frmLookupDataForm" method="post" enctype="multipart/form-data">
                <h4 class="header-title m-t-0">Single Entry</h4>
                <div class="form-group">
                    <label>Series</label>
                    <div class="input-group">
                        <input asp-for="Series" class="form-control" />
                    </div><!-- input-group -->
                </div>

                <div class="form-group">
                    <label>Circle</label>
                    <div class="input-group">
                        <input asp-for="Circle" class="form-control" />
                    </div><!-- input-group -->
                </div>

                <div class="form-group">
                    <label>Operator</label>
                    <div class="input-group">
                        <input asp-for="Operator" class="form-control" />
                    </div><!-- input-group -->
                </div>
                <button type="submit" class="btn btn-success waves-effect waves-light">Create</button>
            </form>
        </div> <!-- end card-box -->

    </div> <!-- end col -->

    <div class="col-lg-6">
        <div class="card-box">
            <h4 class="header-title m-t-0">Bulk Entry</h4>
            <p class="text-muted font-14 m-b-25">
                Upload excel or csv for bulk, if you wanna sample please download here
                <a href="#" name="lnkSampleB2B" id="4" aria-expanded="true" aria-controls="collapseTwo">
                    Sample Template
                </a>
            </p>
            <form asp-action="BulkLookup" id="frmLookupBulkForm" method="post" enctype="multipart/form-data">
                <div class="p-20">
                    <div class="form-group">
                        <label class="control-label">Default file input</label>
                        <input type="file" class="filestyle" data-placeholder="Excel/CSV" id="files" name="files" tabindex="-1" style="position: absolute; clip: rect(0px, 0px, 0px, 0px);">
                        <div class="bootstrap-filestyle input-group">
                            <input type="text" class="form-control " placeholder="Excel/CSV" disabled="">
                            <span class="group-span-filestyle input-group-btn" tabindex="0">
                                <label for="files" class="btn btn-default ">
                                    <span class="icon-span-filestyle glyphicon glyphicon-folder-open"></span>
                                    <span class="buttonText">Choose file</span>
                                </label>
                            </span>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-success waves-effect waves-light">Upload</button>
            </form>
        </div> <!-- end card-box -->
    </div> <!-- end col -->
</div>

<div class="row">

    @{
        if (Model.IsUploaded)
        {
            <div class="alert alert-success alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                Lorem ipsum dolor sit amet, consectetur adipisicing elit. <a href="#" class="alert-link">Alert Link</a>.
            </div>
        }
    }
</div>
<h5>Avilable Operators</h5>
<div class="card-box avilableOperatorBox">    
    <div id="datatable-editable_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4 no-footer">
        <div class="row"><div class="col-sm-12 col-md-6"><div class="dataTables_length" id="datatable-editable_length"><label>Show <select name="datatable-editable_length" aria-controls="datatable-editable" class="form-control form-control-sm"><option value="10">10</option><option value="25">25</option><option value="50">50</option><option value="100">100</option></select> entries</label></div></div><div class="col-sm-12 col-md-6"><div id="datatable-editable_filter" class="dataTables_filter"><label>Search:<input type="search" class="form-control form-control-sm" placeholder="" aria-controls="datatable-editable"></label></div></div></div><div class="row">
            <div class="col-sm-12">
                <table class="table table-striped add-edit-table dataTable no-footer" id="datatable-editable" role="grid" aria-describedby="datatable-editable_info">
                    <thead>
                        <tr role="row">
                        <th class="sorting_asc" tabindex="0" aria-controls="datatable-editable" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column descending" aria-sort="ascending" style="width: 330px;">Series</th>
                        <th class="sorting" tabindex="0" aria-controls="datatable-editable" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 423px;">Circle</th>
                        <th class="sorting" tabindex="0" aria-controls="datatable-editable" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 396px;">Operator</th>
                        <th class="sorting_disabled" rowspan="1" colspan="1" aria-label="Actions" style="width: 252px;">Actions</th></tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var item in Model.AvilableSeries)
                            {
                                <tr class="gradeX odd" role="row">
                                    <td class="sorting_1">@item.Series</td>
                                    <td>@item.Circle</td>
                                    <td>@item.Operator</td>
                                    <td class="actions">
                                        
                                        <a href="#" class="on-default edit-row" data-original-title="Edit"><i class="fa fa-pencil"></i></a>
                                        <a href="#" class="on-default remove-row" data-original-title="Delete"><i class="fa fa-trash-o"> <input type="hidden" value="@item.SeriesId" /></i></a>
                                        <a href="#" class="hidden on-editing save-row" data-original-title="Save"><i class="fa fa-save"><input type="hidden" value="@item.SeriesId" /></i></a>
                                        <a href="#" class="hidden on-editing cancel-row" data-original-title="Cancel"><i class="fa fa-times"></i></a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row">

        </div>
    </div>

    <!-- MODAL -->
    <div id="dialog" class="modal-block mfp-hide">
        <section class="card p-20">
            <header class="panel-heading">
                <h4 class="panel-title mt-0">Are you sure?</h4>
            </header>
            <div class="panel-body">
                <div class="modal-wrapper">
                    <div class="modal-text">
                        <p>Are you sure that you want to delete this row?</p>
                    </div>
                </div>

                <div class="row m-t-20">
                    <div class="col-md-12 text-right">
                        <button id="dialogConfirm" class="btn btn-success waves-effect waves-light">Confirm</button>
                        <button id="dialogCancel" class="btn btn-danger waves-effect">Cancel</button>
                    </div>
                </div>
            </div>

        </section>
    </div>

    <script src="~/assets/js/jquery.min.js"></script>
    <script src="~/js/SampleDownload.js"></script>


    <script src="~/assets/plugins/magnific-popup/jquery.magnific-popup.min.js"></script>
    <script src="~/assets/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/assets/plugins/datatables.editable.init.js"></script>
    <script src="~/assets/plugins/datatables/dataTables.bootstrap4.min.js"></script>
    <script>
        $('#datatable-editable_wrapper').find('.row').eq(0).remove();

        //$('#mainTable').editableTableWidget({bFilter: false, bInfo: false}).numericInputExample().find('td:first').focus();
    </script>
