@model DataProcessing.CommonModels.B2CSearchBlockModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Search</h4>
<div class="row">
    <div class="col-sm-12">
        <div class="card-box">
            <h4 class="m-t-0 header-title"><b>Business to Customer </b></h4>
            <p class="text-muted m-b-30 font-13">
                You can use this below search critiria to filter
            </p>
            <div class="row">
                <div class="col-md-6">
                    <div class="p-20">
                        <form action="#">
                            <div class="form-group">
                                <label>Country</label>
                                <select asp-for="CountryId" id="b2bCountry"
                                        class=form-control multiple placeholder="Please select"
                                        asp-items="@Model.Country"></select>
                            </div>
                            <div class="form-group">
                                <label>State</label>
                                <select asp-for="StateId" id="b2bState"
                                        class=form-control multiple placeholder="Please select"
                                        asp-items="@Model.State"></select>
                            </div>
                            <div class="form-group">
                                <label>Area</label>
                                <select asp-for="AreaId" id="b2bArea"
                                        class=form-control multiple placeholder="Please select"
                                        asp-items="@Model.Area"></select>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="p-20">
                        <form action="#">

                            <div class="form-group">
                                <label>City</label>
                                <select asp-for="CityId" id="b2bCity"
                                        class=form-control multiple placeholder="Please select"
                                        asp-items="@Model.City"></select>
                            </div>

                            <div class="form-group">
                                <label>Desigination</label>
                                <select asp-for="DesiginationId" id="b2bDesigination"
                                        class=form-control multiple placeholder="Please select"
                                        asp-items="@Model.Desigination"></select>
                            </div>
                        </form>
                    </div>
                </div>


                <div>
                    <div>
                        <div class="form-group m-b-0" style="margin-top:50px;">
                            <button type="button" id="btnBusinessToBusinessSearch" class="btn btn-primary waves-effect waves-light">Search</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    </div>
<div class= "row">
    <div class="col-sm-12">
        <div class="card-box">
            <p class="text-muted m-b-30 font-13">
                You can use this below search critiria to filter
            </p>

            <div class="row">
                <div class="col-md-4 col-xl-2">
                    <div class="card-box">
                        <div class="bar-widget">
                            <div class="table-box">
                                <div class="table-detail">
                                    <div class="iconbox bg-custom">
                                        <i class="icon-trophy"></i>
                                    </div>
                                </div>

                                <div class="table-detail">
                                    <h4 class="m-t-0 m-b-5 font-18"><b>Total</b></h4>
                                    <h5 class="text-muted m-b-0 m-t-0">95</h5>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 col-xl-2">
                    <div class="card-box">
                        <div class="bar-widget">
                            <div class="table-box">
                                <div class="table-detail">
                                    <div class="iconbox bg-custom">
                                        <i class="icon-trophy"></i>
                                    </div>
                                </div>

                                <div class="table-detail">
                                    <h4 class="m-t-0 m-b-5 font-18"><b>Result</b></h4>
                                    <h5 class="text-muted m-b-0 m-t-0">95</h5>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 col-xl-2">
                    <div class="btn-group dropdown show">
                        <button type="button" class="btn btn-success waves-effect waves-light">Download</button>
                        <button type="button" class="btn btn-success dropdown-toggle waves-effect waves-light" data-toggle="dropdown" aria-expanded="true"><i class="caret"></i></button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#">Excel</a>
                            <a class="dropdown-item" href="#">CSV</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 col-xl-4">

                    <p class="font-600">Country <span class="text-primary pull-right">80%</span></p>
                    <div class="progress m-b-30">
                        <div class="progress-bar progress-bar-primary progress-animated wow animated animated" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 80%; visibility: visible; animation-name: animationProgress;">
                        </div><!-- /.progress-bar .progress-bar-danger -->
                    </div><!-- /.progress .no-rounded -->

                    <p class="font-600">State <span class="text-pink pull-right">50%</span></p>
                    <div class="progress m-b-30">
                        <div class="progress-bar progress-bar-pink progress-animated wow animated animated" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width: 50%; visibility: visible; animation-name: animationProgress;">
                        </div><!-- /.progress-bar .progress-bar-pink -->
                    </div><!-- /.progress .no-rounded -->

                    <p class="font-600">City <span class="text-info pull-right">70%</span></p>
                    <div class="progress m-b-30">
                        <div class="progress-bar progress-bar-info progress-animated wow animated animated" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width: 70%; visibility: visible; animation-name: animationProgress;">
                        </div><!-- /.progress-bar .progress-bar-info -->
                    </div><!-- /.progress .no-rounded -->

                    <p class="font-600">Area<span class="text-warning pull-right">65%</span></p>
                    <div class="progress m-b-30">
                        <div class="progress-bar progress-bar-warning progress-animated wow animated animated" role="progressbar" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100" style="width: 65%; visibility: visible; animation-name: animationProgress;">
                        </div><!-- /.progress-bar .progress-bar-warning -->
                    </div><!-- /.progress .no-rounded -->

                    <p class="font-600">Phone <span class="text-success pull-right">40%</span></p>
                    <div class="progress m-b-30">
                        <div class="progress-bar progress-bar-success progress-animated wow animated animated" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%; visibility: visible; animation-name: animationProgress;">
                        </div><!-- /.progress-bar .progress-bar-success -->
                    </div><!-- /.progress .no-rounded -->

                </div>

            </div>
        </div>
    </div>
</div>